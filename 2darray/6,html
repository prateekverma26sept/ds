<pre><code>
    #include&lt;stdio.h&gt;
    #include&lt;conio.h&gt;
    #include&lt;dos.h&gt;
    void printArr(int arr[2][2]){
        int i, j;
        for (i = 0; i &lt; 2; i++)
        {
            for (j = 0; j &lt; 2; j++)
            {
                printf("%d\t", arr[i][j]);
            }
            printf("\n");        
        }
        
    }

    void scalerMul(int mat[2][2], int num){
        int i, j;
        for(i = 0; i &lt; 2; i++)
        {
            for (j = 0; j &lt; 2; j++)
            {
                mat[i][j] = num * mat[i][j];
            }
        }
    }

    void main(){
        int arr[2][2], i, j, num;
        clrscr();
        for( i = 0; i &lt; 2; i++)
        {
            for (j = 0; j &lt; 2; j++)
            {
                printf("Enter Value at A[%d,%d]\t", i+1, j+1);
                scanf("%d", &arr[i][j]);
            }
        }
        printf("Enter Scaler Value to be multiplied\n");
        scanf("%d", &num);
        printf("Entered Matrix\n");
        printArr(arr);
        scalerMul(arr, num);
        printf("New Matrix is\n");
        printArr(arr);
        delay(5000);
    }
        </code>
</pre>
<h1>OUTPUT</h1>
<pre>
    Enter Value at A[1,1]   5
    Enter Value at A[1,2]   3                                                       
    Enter Value at A[2,1]   9                                                       
    Enter Value at A[2,2]   3                                                       
    Enter Scaler Value to be multiplied                                             
    5                                                                               
    Entered Matrix                                                                  
    5       3                                                                       
    9       3                                                                       
    New Matrix is                                                                   
    25      15                                                                      
    45      15 
</pre>
