    #include&lt;dos.h&gt;
    long sum(int n){
        if (n == 1)
            return 1;
        return n+sum(n - 1);    
    }
    
    void main(){
        int n = 10;
        clrscr();
        printf("Sum of %d terms is %ld", n, sum(n));
        delay(5000);
    }
